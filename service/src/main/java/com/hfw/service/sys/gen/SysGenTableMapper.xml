<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hfw.service.sys.gen.SysGenTableMapper">

    <select id="page" resultType="com.hfw.model.po.sys.SysGenTable">
        select
        id,
        table_name,
        table_remark
        from sys_gen_table
        <where>
            <if test="po.id!=null">
                and id=#{po.id}
            </if>
            <if test="po.tableName!=null and po.tableName!=''">
                and table_name=#{po.tableName}
            </if>
            <if test="page.params.tableName_like!=null and page.params.tableName_like!=''">
                and table_name like concat(#{page.params.tableName_like},'%')
            </if>
            <if test="po.tableRemark!=null and po.tableRemark!=''">
                and table_remark=#{po.tableRemark}
            </if>
            <if test="page.params.tableRemark_like!=null and page.params.tableRemark_like!=''">
                and table_remark like concat(#{page.params.tableRemark_like},'%')
            </if>
        </where>
        <if test="page.sortByField!=null and page.sortByWay!=null">
            order by ${page.sortByField} ${page.sortByWay}
        </if>
    </select>

</mapper>
